<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <resursbank_default>
                <active>1</active>
                <model>Resursbank\Core\Model\Payment\Resursbank</model>
                <order_status>pending_payment</order_status>
                <allowspecific>0</allowspecific>
                <group>resursbank</group>
                <title>Resurs Bank</title>
                <!-- Adapter information. -->
                <!-- NOTE: Capture / Refund / Cancel / Void implements through order-management module. -->
                <can_use_checkout>1</can_use_checkout>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_refund>1</can_refund>
                <can_void>1</can_void>
                <can_cancel>1</can_cancel>
                <is_gateway>1</is_gateway>
                <can_refund_partial_per_invoice>1</can_refund_partial_per_invoice>
                <can_authorize_and_capture>1</can_authorize_and_capture>
                <can_fetch_transaction_information>1</can_fetch_transaction_information>
                <payment_action>authorize</payment_action>
                <can_sale>1</can_sale>
                <!-- Explicitly specify false values. -->
<!--                <can_capture_once>0</can_capture_once>-->

<!--                <can_order>0</can_order>-->
<!--                <can_use_internal>0</can_use_internal>-->
<!--                <can_edit>0</can_edit>-->
<!--                <can_initialize>0</can_initialize>-->
<!--                <can_review_payment>0</can_review_payment>-->
<!--                <can_use_for_multishipping>0</can_use_for_multishipping>-->

            </resursbank_default>
        </payment>
        <resursbank>
            <api>
                <environment>1</environment>
            </api>
        </resursbank>
    </default>
</config>

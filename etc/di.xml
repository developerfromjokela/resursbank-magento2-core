<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment method configuration. -->
    <type name="Resursbank\Core\Model\Payment\Resursbank">
        <arguments>
            <argument name="code" xsi:type="const">Resursbank\Core\Model\Payment\Resursbank::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Magento\Payment\Block\Info</argument>
        </arguments>
    </type>

    <!-- Payment Method interfaces. -->
    <preference for="Resursbank\Core\Api\PaymentMethodRepositoryInterface" type="Resursbank\Core\Model\PaymentMethodRepository" />
    <preference for="Resursbank\Core\Api\Data\PaymentMethodInterface" type="Resursbank\Core\Model\PaymentMethod" />
    <preference for="Resursbank\Core\Api\Data\PaymentMethodSearchResultsInterface" type="Resursbank\Core\Model\PaymentMethod\SearchResults" />

    <!-- Append our payment methods in frontend checkout process. -->
    <type name="Magento\Payment\Helper\Data">
        <plugin name="resursbank_core_payment_helper" type="Resursbank\Core\Plugin\Payment\Helper\Data" />
    </type>

    <!-- Prevent order confirmation email from being sent upon order creation. -->
    <type name="Magento\Sales\Model\Order">
        <plugin name="resursbank_core_stop_order_confirmation_email" type="Resursbank\Core\Plugin\Order\StopConfirmationEmail" />
    </type>
</config>
